@using Appulu.Core.Domain.Catalog
@using Appulu.Services
@model RecurringPaymentModel

<div class="panel-group">
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ReccuringPaymentDetailsInfoTop, additionalData = Model })
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="InitialOrderId" />
                </div>
                <div class="col-md-9">
                    <a asp-controller="Order" asp-action="Edit" asp-route-id="@Model.InitialOrderId">@T("Admin.Common.View")</a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="UserEmail" />
                </div>
                <div class="col-md-9">
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserId">@Model.UserEmail</a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="CycleLength" />
                </div>
                <div class="col-md-9">
                    <app-editor asp-for="CycleLength" />
                    <span asp-validation-for="CycleLength"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="CyclePeriodId" />
                </div>
                <div class="col-md-9">
                    <app-select asp-for="CyclePeriodId" asp-items="@(((RecurringProductCyclePeriod)Model.CyclePeriodId).ToSelectList())" />
                    <span asp-validation-for="CyclePeriodId"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="TotalCycles" />
                </div>
                <div class="col-md-9">
                    <app-editor asp-for="TotalCycles" />
                    <span asp-validation-for="TotalCycles"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="CyclesRemaining" />
                </div>
                <div class="col-md-9">
                    <div class="form-text-row">@Model.CyclesRemaining</div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="PaymentType" />
                </div>
                <div class="col-md-9">
                    <div class="form-text-row">@Model.PaymentType</div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="StartDate" />
                </div>
                <div class="col-md-9">
                    <div class="form-text-row">@Model.StartDate</div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <app-label asp-for="IsActive" />
                </div>
                <div class="col-md-9">
                    <app-editor asp-for="IsActive" />
                    <span asp-validation-for="IsActive"></span>
                </div>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ReccuringPaymentDetailsInfoBottom, additionalData = Model })
</div>