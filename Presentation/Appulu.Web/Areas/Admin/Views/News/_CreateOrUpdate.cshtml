@model NewsItemModel
@inject IEventPublisher eventPublisher

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="content">
    <div class="form-horizontal">
        <app-tabs id="news-edit">
            <app-tab asp-name="tab-info" asp-title="@T("Admin.ContentManagement.News.NewsItems.Info")" asp-default="true">@await Html.PartialAsync("_CreateOrUpdate.Info", Model)</app-tab>
            <app-tab asp-name="tab-seo" asp-title="@T("Admin.Common.SEO")">@await Html.PartialAsync("_CreateOrUpdate.Seo", Model)</app-tab>
        </app-tabs>
    </div>
</div>

@{
    //custom tabs
    var eventMessage = new AdminTabStripCreated(this.Html, "news-edit");
    eventPublisher.Publish(eventMessage);
    foreach (var eventBlock in eventMessage.BlocksToRender)
    {
        @eventBlock
    }
}