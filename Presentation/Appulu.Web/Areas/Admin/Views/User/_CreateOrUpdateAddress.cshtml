@model UserAddressModel

<div asp-validation-summary="ModelOnly"></div>
<input type="hidden" asp-for="UserId"/>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.UserAddressDetailsTop, additionalData = Model })
            <div class="panel panel-default">
                <div class="panel-body">
                    <app-editor asp-for="Address" asp-template="Address"/>
                </div>
            </div>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.UserAddressDetailsBottom, additionalData = Model })
        </div>
    </div>
</div>